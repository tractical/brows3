<% file_name = @file.key.split('/').last %>
<h1>Edit <%= file_name %></h1>
<form method="post" action="/bucket/<%= params[:bucket_id] %>/files/<%= file_name %>">
  <label for="name">Name</label>
  <input type="text" name="name" value="<%= @file.key.split('/').last %>">
  <input type="hidden" name="_method" value="PUT">
  <input type="hidden" name="id" value="<%= @file.key %>">
  <input type="submit" class="large button">
</form>