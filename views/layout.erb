<!doctype html>

<html>
  <head>
    <meta name="robots" content="none">
    <meta name="googlebot" content="noarchive">
    <title>BrowS3.it</title>
    <%= stylesheet "/stylesheets/normalize.css" %>
    <%= stylesheet "/stylesheets/app.css" %>
    <%= stylesheet "/stylesheets/jparallax/jquery.parallax.css" %>
  </head>

  <body>

    <div id="content">
      <% unless request.path_info == "/" %>
        <nav class="top-bar">
          <ul class="title-area">
            <li class="name">
              <h1>
                <a href="<%= url('/') %>">
                  <img src="/images/brows3.png" alt="An Amazing S3 Browser" width="27" height="31">
                </a>
              </h1>
            </li>
            <li class="toggle-topbar icon"><a href="#"><span>Menu</span></a></li>
          </ul>
        </nav>
      <% end %>

      <div class="application">
        <% if flash[:notice] %>
          <div class="alert-box row">
            <%= flash[:notice] %>
          </div>
        <% elsif flash[:alert] %>
          <div class="alert-box alert row">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= yield %>
      </div>

      <div id="footer"></div>
    </div>

    <footer class="main">
      <div class="row collapse">
        <a class="footer-option" href="<%= url('contact-us') %>">Contact us</a>
        <a class="footer-option" href="<%= url('faq') %>">FAQ</a>
        <a class="footer-option" href="<%= url('privacy-terms') %>">Privacy & Terms</a>
      </div>
    </footer>

    <%= javascripts "vendor/jquery" %>
    <%= javascripts "jparallax/jquery.event.frame", "jparallax/jquery.parallax" %>
    <%= javascripts "brows3" %>


  </body>
</html>