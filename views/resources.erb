<!doctype html>

<html>
  <head>
    <title>BROWS3.it - An Amazing S3 Browser.</title>

    <link href="/images/favicon.png" rel="shortcut icon" type="image/png">

    <meta name="keywords" content="amazon,aws,s3,brows3,s3 browser,amazon browser">
    <meta name="description" content="BROWS3 is an AWS S3 file browser that is secure, pretty and easy to use.">
    <meta name="author" content="Tractical. Tractical is a small web development studio located in Mexico.">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= css :application, media: "screen" %>
  </head>

  <body>

    <div id="content">
      <nav class="top-bar">
        <ul class="title-area">
          <li class="name">
            <h1>
              <a href="<%= url('/') %>">
                <img src="/images/brows3.png" alt="An Amazing S3 Browser" width="27" height="31">
              </a>
            </h1>
          </li>
          <li class="toggle-topbar icon"><a href="#"><span>Menu</span></a></li>
        </ul>

        <section class="top-bar-section">
          <ul class="right">
            <li><a href="/logout">Logout</a></li>
          </ul>
        </section>
      </nav>

      <div class="resources row">
        <% if flash[:notice] %>
          <div class="alert-box">
            <%= flash[:notice] %>
          </div>
        <% elsif flash[:alert] %>
          <div class="alert-box alert">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= yield %>
      </div>

      <div id="footer"></div>
    </div>

    <footer class="main">
      <div class="row collapse">
        <a class="footer-option" href="#">Contact us</a>
        <a class="footer-option" href="#">FAQ</a>
        <a class="footer-option" href="#">Privacy & Terms</a>
      </div>
    </footer>

    <%= js :application %>
    <%= js :foundation %>
  </body>
</html>
