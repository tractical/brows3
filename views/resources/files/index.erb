<% unless @directories.empty? %>
  <h2>Directories</h2>
  <ul>
    <% @directories.each do |directory| %>
      <li>
        <a href="<%= directory %>"><%= directory %></a>
      </li>
    <% end %>
  </ul>
<% end %>

<% unless @files.empty? %>
  <h2>Files</h2>
  <ul>
    <% @files.each do |file| %>
      <li><a href="<%= file.object.url_for(:read) %>"><%= file.key.gsub(params[:splat].first, "") %></a></li>
    <% end %>
  </ul>
<% end %>